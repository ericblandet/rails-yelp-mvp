<div class="row d-flex justify-content-between p-3 align-items-center">
  <div class="col">
   <h1>Restaurants</h1>
  </div>
  <div class="col">
    <%= link_to "Create Restaurant", new_restaurant_path, class:"btn btn-secondary" %>
  </div>
</div>

<ul class="list-group">
  <%@restaurants.each do |restaurant| %>
  <li class="list-group-item">
  <%= link_to"#{restaurant.name} (#{restaurant.category}) in #{restaurant.address}", restaurant_path(restaurant)  %>
  </li>
  <% end %>
</ul>
